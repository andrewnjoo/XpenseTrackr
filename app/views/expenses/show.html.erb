<div class="max-w-3xl mx-auto mt-8">
  <h1 class="text-3xl font-semibold mb-4">Expense Details</h1>
  <div class="border border-gray-300 rounded p-4">
    <p><strong>Title:</strong> <%= @expense.title %></p>
    <p><strong>Amount:</strong> <%= number_to_currency(@expense.amount) %></p>
    <p class='mb-8'><strong>Date:</strong> <%= @expense.date %></p>
    <%= link_to 'Back', expenses_path, class: "mt-8 bg-gray-500 hover:bg-gray-700 text-white font-bold py-2 px-4 rounded" %>
  </div>
</div>
