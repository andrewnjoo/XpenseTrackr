<div class="max-w-3xl mx-auto mt-8">
  <div class="my-4">
    <% if user_signed_in? %>
      <div class="bg-green-200 text-green-800 rounded-md p-4 mb-4"> Welcome <%= current_user.email %> </div>
      <%= button_to "Sign out", destroy_user_session_path, method: :delete, class: "text-red-500 border-2 border-black p-2 rounded-lg" %>
    <% else %>
      <%= link_to "Sign in", new_user_session_path, class: "text-blue-500 border-2 border-blue-500 p-2 rounded-lg hover:border-blue-700 transition shadow-md" %>
    <% end %>
  </div>
  <h1 class="text-3xl font-semibold mb-4">Expenses</h1>
  <%= link_to 'New Expense', new_expense_path, class: "bg-blue-500 hover:bg-blue-700 text-white font-bold py-2 px-4 rounded" %>
  <table class="mt-4 w-full border-collapse border border-gray-300">
    <thead>
      <tr class="bg-gray-200">
        <th class="border border-gray-300 py-2 px-4">Title</th>
        <th class="border border-gray-300 py-2 px-4">Amount</th>
        <th class="border border-gray-300 py-2 px-4">Date</th>
        <th class="border border-gray-300 py-2 px-4">Description</th>
        <th class="border border-gray-300 py-2 px-4" colspan="3"></th>
      </tr>
    </thead>
    <tbody>
      <% @expenses.each do |expense| %>
        <tr class="border border-gray-300">
          <td class="border border-gray-300 py-2 px-4"><%= expense.title %></td>
          <td class="border border-gray-300 py-2 px-4"><%= number_to_currency(expense.amount) %></td>
          <td class="border border-gray-300 py-2 px-4"><%= expense.date %></td>
          <td class="border border-gray-300 py-2 px-4"><%= expense.description %></td>
          <td class="border border-gray-300 py-2 px-4"><%= link_to 'Show', expense, class: "text-blue-500 hover:text-blue-700" %></td>
          <td class="border border-gray-300 py-2 px-4"><%= link_to 'Edit', edit_expense_path(expense), class: "text-yellow-500 hover:text-yellow-700" %></td>
          <td class="border border-gray-300 py-2 px-4"><%= link_to 'Delete', expense, method: :delete, data: { "turbo-method": :delete }, class: "text-red-500 hover:text-red-700" %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
